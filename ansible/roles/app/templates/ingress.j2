---

apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ ingress_name }}
  namespace: {{ namespace_name }}
  labels:
    app: {{ app_name }}
#  annotations:
#      haproxy.org/path-rewrite: "/"
spec:
  rules:
  - host: {{ ingress_host }}
    http:
      paths:
      - path: /
        pathType: "Prefix"
        backend:
          service:
            name: {{ service_name }}
            port:
              number: {{ service_port }}